{
  "$schema": "https://json.schemastore.org/web-manifest-combined.json",
  "name": "Nail Collection - Gerenciador de Esmaltes",
  "short_name": "Nail Collection",
  "description": "Organize sua coleção de esmaltes com fotos, cores, validade e nail arts",
  "start_url": "/index.html",
  "scope": "/",
  "id": "nail-collection-app-v1",
  "display": "standalone",
  "background_color": "#667eea",
  "theme_color": "#667eea",
  "orientation": "portrait",
  "dir": "ltr",
  "lang": "pt-BR",
  "categories": ["lifestyle", "beauty", "productivity"],
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  "prefer_related_applications": false,
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "icons": [
    {
      "src": "icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icons/maskable-icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "icons/maskable-icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "screenshots/screenshot-home.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "label": "Tela inicial com estatísticas da coleção"
    },
    {
      "src": "screenshots/screenshot-add.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "label": "Adicionar novo esmalte com foto e detalhes"
    },
    {
      "src": "screenshots/screenshot-collection.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "label": "Visualizar coleção com filtros por cor"
    },
    {
      "src": "screenshots/screenshot-details.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "label": "Detalhes do esmalte com nail arts"
    },
    {
      "src": "screenshots/screenshot-search.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "label": "Busca e organização por marca e cor"
    }
  ],
  "related_applications": [
    {
      "platform": "play",
      "id": "com.nailcollection.app",
      "url": "https://play.google.com/store/apps/details?id=com.nailcollection.app"
    }
  ],
  "scope_extensions": [
    {
      "origin": "https://nail-collection.netlify.app"
    }
  ],
  "shortcuts": [
    {
      "name": "Adicionar Esmalte",
      "short_name": "Adicionar",
      "description": "Adicionar novo esmalte à coleção",
      "url": "/index.html?tab=add",
      "icons": [
        {
          "src": "icons/icon-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Ver Coleção",
      "short_name": "Coleção",
      "description": "Visualizar toda a coleção",
      "url": "/index.html?tab=collection",
      "icons": [
        {
          "src": "icons/icon-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "file_handlers": [
    {
      "action": "/index.html",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".webp", ".gif"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+nailcollection",
      "url": "/index.html?polish=%s"
    }
  ],
  "share_target": {
    "action": "/index.html",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "name",
      "text": "description",
      "files": [
        {
          "name": "image",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "handle_links": "preferred",
  "scope_patterns": [
    {
      "pathname": "/*"
    }
  ]
}